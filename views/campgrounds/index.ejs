<% layout('layout/boilerplate') %>

<h1>List of all Campgrounds</h1>
<div>
  <a href="/campgrounds/new"> Add a campground</a>
</div>

    <% for (let cp of cps) { %>
    <div class="card" mb-3>
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" alt="" src="<%= cp.image %>">
        </div>

        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"> <%= cp.title %> </h5>
            <p class="card-text"> <%= cp.description %> </p>
            <p class="card-text">
              <small class="text-muted"> <%= cp.location %> </small>
            </p>

            <a href="/campgrounds/<%= cp._id %>" class="btn btn-primary"> View <%= cp.title %></a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
</ol>
